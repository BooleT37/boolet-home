{
  "name": "boolet-home",
  "version": "0.1.0",
  "description": "BooleT home page",
  "author": "Alexey Levin (https://github.com/BooleT37)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node server/dist/server.js",
    "postinstall": "if-env NODE_ENV=production && npm run build:all",
    "build:all": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "build:server": "tsc -p server",
    "build:client": "cross-env NODE_ENV=production webpack --config client/webpack.config.js",
    "watch:server": "node node_modules/nodemon/bin/nodemon.js --config server/nodemon.json",
    "watch:client": "cross-env NODE_ENV=developement webpack-dev-server --config client/webpack.config.js",
    "run:server": "npm run build:server && npm start",
    "lint:server": "echo 0"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-rc.3",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.3",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/preset-env": "^7.0.0-rc.3",
    "@babel/preset-react": "^7.0.0-rc.3",
    "@babel/preset-typescript": "^7.0.0-rc.3",
    "@material-ui/core": "^4.3.3",
    "@material-ui/icons": "^4.2.1",
    "@types/classnames": "^2.2.6",
    "@types/config": "^0.0.34",
    "@types/express": "^4.16.0",
    "@types/express-http-proxy": "^1.5.12",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.0",
    "axios": "^0.19.0",
    "babel-cli": "^7.0.0-beta.3",
    "babel-loader": "^8.0.0-beta",
    "classnames": "^2.2.6",
    "concurrently": "^4.0.1",
    "config": "^3.2.2",
    "core-js": "^3.2.1",
    "cross-env": "^5.2.0",
    "css-loader": "^3.2.0",
    "express": "^4.16.3",
    "express-history-api-fallback": "^2.2.1",
    "express-http-proxy": "^1.4.0",
    "file-loader": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "html-webpack-plugin": "^3.2.0",
    "if-env": "^1.0.4",
    "ignore-styles": "^5.0.1",
    "less": "^3.8.1",
    "less-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "module-alias": "^2.1.0",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-hot-loader": "^4.3.5",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-swipe-events": "^1.0.3",
    "react-touch-carousel": "^0.9.3",
    "regenerator-runtime": "^0.13.3",
    "styled-components": "^4.1.3",
    "ts-node": "^8.3.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^2.1.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "devDependencies": {
    "@types/styled-components": "4.1.18",
    "babel-plugin-styled-components": "^1.10.0",
