{
  "name": "boolet-home",
  "version": "0.1.0",
  "description": "BooleT home page",
  "author": "Alexey Levin (https://github.com/BooleT37)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "npm run build:client && npm run build:server && node server/dist/server.js",
    "build:server": "tsc -p server",
    "build:client": "webpack --config client/webpack.config.js",
    "watch:server": "node node_modules/nodemon/bin/nodemon.js --config server/nodemon.json",
    "watch:client": "webpack-serve client/webpack.config.js",
    "lint:server": "tslint -p server -e /client/*"
  },
  "dependencies": {
    "@babel/core": "^7.0.0-rc.3",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.3",
    "@babel/preset-env": "^7.0.0-rc.3",
    "@babel/preset-react": "^7.0.0-rc.3",
    "@babel/preset-typescript": "^7.0.0-rc.3",
    "@types/express": "^4.16.0",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "babel-cli": "^7.0.0-beta.3",
    "babel-loader": "^8.0.0-beta",
    "css-loader": "^1.0.0",
    "express": "^4.16.3",
    "fork-ts-checker-webpack-plugin": "^0.4.9",
    "ignore-styles": "^5.0.1",
    "mini-css-extract-plugin": "^0.4.2",
    "module-alias": "^2.1.0",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.3.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.3",
    "style-loader": "^0.22.1",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "webpack-serve": "^2.0.2"
  }
}
